<h1><%= @article.title %></h1>

<p>
  <%= sanitize(@article.text) %>
</p>
<div id="article_nav">
  <%= link_to '< Back to Blog Index', articles_path %>
  <% if user_signed_in? && current_user.owns?(@article) %> |
    <%= link_to 'Edit this article', edit_article_path %>
  <% end %>
</div>
<%= redux_store('RGBlog',
                    { comments: comments_list_json(@article.comments),
                             user: user_json(current_user) || false,
                             article: @article.id }
                   ) %>
<%= react_component('CommentsApp') %>
<%= react_component('AuthApp') %>

